package rpgproject;
import java.util.Scanner;
public class game {
 
	public static void main(String[] args) {
		player you = new player();
		Scanner choice = new Scanner(System.in);
		String answer;
		
		you.level = 1;
		you.rep = 0;
		you.Mrep = 0;
		
		boolean firstChoice = false;
		boolean playercreator;
		
		System.out.println("options you can type will be given to you like 'hello' (so that means typing hello will send up an option");
		System.out.println(" ");
		System.out.println("Were you born before (Real critter) or after (mythical critter) the great extinction? ('real' - 'mythical'");
		
			
		while (firstChoice == false){
			answer = choice.next();
		if (answer.equals("former")||answer.equals("Former")||answer.equals("former ")||answer.equals("Former ")){
				you.rep = you.rep + 1;
				you.Mrep = you.Mrep - 1;
				firstChoice = true;
				System.out.println("You are a former race");
			}else if (answer.equals("mythical")){
				you.Mrep = you.Mrep + 1;
				you.rep = you.rep - 1;
				firstChoice = true;
				System.out.println("You are a subsiquent race");
			}else{
				System.out.println("Say either 'real' or 'mythical'");
			}
		}
		
	
	}
}
 
